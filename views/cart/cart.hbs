
      {{#if products}}
  <div class="cart clearfix">
  {{#each products}}
  {{!-- <div class="row">
 <div class="col-sm-6 col-md-4">
        <ul class="list-group">
            <li class="list-group-item">  --}}
                <span class="badge">{{ this.qty }}</span>
                <span>{{ this.item.item }}</span>
                <span class="label label-success">${{this.price}}</span>
                {{!-- <div class="btn-group"> --}}
                    <a href="/removeitem/{{this._id}}" class="btn btn-primary" role="button">Remove</a>
                <span class="thumbnail"><img src="{{this.item.imageUrl}}" alt="..."></span>
                
                    </ul>
                </div>
            </li>
        </ul> 
    </div>
 </div>
  {{/each}}
 </div>

 <div class="sticky-top cart-totals pull-right" data-spy="affix">
    
        <h1>
     Total:${{total}}.00
        </h1>

 <hr>
 <button type="button" class="btn btn-success btn-large float-right pull-right">Checkout</button>    

 </div>
 
